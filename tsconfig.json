{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "esnext",
      "module": "commonjs",
      "jsx": "react",
      "declaration": true,
      "declarationDir": "lib",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["src", "docs", "global.d.ts"],
    "exclude": ["node_modules"]
}
  